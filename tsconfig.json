{
    "compilerOptions": {
        "baseUrl": "./",
        "rootDir": "./src",
        "outDir": "./dist/",

        "allowJs": true,
        "target": "es2020",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,

        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noUncheckedIndexedAccess": true,
        
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "incremental": false,
        "noErrorTruncation": true,
                
        "types": ["webpack-env", "foundry-vtt-types", "resize-observer-browser", "jest"]
    },
    "include": ["./src/globals.d.ts", "./src/**/*.ts"],
    "exclude": []
}
